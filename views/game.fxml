<?import javafx.scene.layout.AnchorPane?>

<?import java.net.URL?>
<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.GuiController">
    <stylesheets>
        <URL value="/views/styles.css" />
    </stylesheets>
    <children>
        <!-- Seus elementos da interface aqui -->
        <ComboBox fx:id="difficultyComboBox" layoutX="14.0" layoutY="14.0" />
        <Button layoutX="300.0" layoutY="14.0" text="Start Game" onAction="#handleStartGame" />

        <Label fx:id="jogadorRealCartas" layoutX="14.0" layoutY="50.0" />
        <Label fx:id="jogadorMaquinaCartas" layoutX="300.0" layoutY="50.0" />

        <ImageView fx:id="cartaImagem" layoutX="150.0" layoutY="100.0" fitWidth="300.0" fitHeight="400.0" />

        <TextArea fx:id="cartaAtual" layoutX="14.0" layoutY="520.0" prefHeight="200.0" prefWidth="500.0" />

        <Button id="1" layoutX="14.0" layoutY="740.0" text="Fofura" onAction="#handleEscolherAtributo" />
        <Button id="2" layoutX="100.0" layoutY="740.0" text="Agilidade" onAction="#handleEscolherAtributo" />
        <Button id="3" layoutX="200.0" layoutY="740.0" text="Agressividade" onAction="#handleEscolherAtributo" />
        <Button id="4" layoutX="300.0" layoutY="740.0" text="Brincalhão" onAction="#handleEscolherAtributo" />
        <Button id="5" layoutX="400.0" layoutY="740.0" text="Obediência" onAction="#handleEscolherAtributo" />
    </children>
</AnchorPane>
